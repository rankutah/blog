{{- /* themes/overrides/layouts/index.forms.json
      Outputs site form config as JSON at /.well-known/forms.json
*/ -}}
{{- $f := .Site.Params.forms | default (dict) -}}
{{- $json := dict
  "to"             ($f.to | default (slice))
  "from"           ($f.from | default "")
  "subjectPrefix"  ($f.subjectPrefix | default "")
  "allowedOrigins" ($f.allowedOrigins | default (slice))
  "domain"         ($f.domain | default "")
-}}
{{ $json | jsonify }}
